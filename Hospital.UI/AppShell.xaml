<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Hospital.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Hospital.UI"
    xmlns:pages="clr-namespace:Hospital.UI.Pages"
    Title="Hospital.UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="HospitalWards"
    ContentTemplate="{DataTemplate pages:HospitalWardsPage}"
    Route="HospitalWardsPage" />

</Shell>
